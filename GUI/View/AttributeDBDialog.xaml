<UserControl x:Class="GUI.AttributeDBDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="20">
            <CheckBox IsChecked="True" Margin="10" Content="允许出错后继续"/>
            <CheckBox IsChecked="True" Margin="10" Content="初始化字典"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource ButtonStyle}" Margin="10" Content="上一步"/>
            <Button Style="{StaticResource ButtonStyle}" Margin="10" Content="下一步"/>
            <Button Style="{StaticResource ButtonStyle}" Margin="10" Content="取消"/>
        </StackPanel>
    </Grid>
</UserControl>
